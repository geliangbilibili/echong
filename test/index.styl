html,body
  margin 0

input,button
  outline none
  border none

.wrapper
  outline red solid
  padding 10px
  .top
    display flex
    .city
      position relative
      flex 25%
      &::before
        content ''
        position absolute
        border 5px solid ;
        border-color red transparent transparent;
        top 10px
        right 10px

    .search
      flex 65%
      position relative
      input
        display block
        box-sizing border-box
        padding 5px 10px
        width 100%
        height 100%
        border-radius 5px
        background gray
      .icon
        position absolute
        right 10px
        transform translateY(-50%)
        top 50%
        width 10px
        height 10px
        background red
    .msg
      flex 10%
      width 10px
      height 10px
      background red

